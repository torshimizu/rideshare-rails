<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Drivers
      </h1>
      <h3>Find by Name</h3>
      <%= render partial: "shared/find_by_name", locals: {action_name: "Find Driver", url: by_name_path} %>
    </div>
  </div>
</section>


<table class='table'>
  <thead>
    <tr>
      <ul class='show-page'>
        <li>Name</li>
        <li>Rating</li>
      </ul>
    </tr>
  </thead>

  <tbody>
    <section>
      <ul class='show-page'>
        <% if @drivers.length == 0 %>
        <%="Driver not found"%>
        <% else %>
        <% @drivers.each do |driver| %>
        <li>
          <%= link_to "#{driver.name}", driver_path(driver.id) %>
        </li>
        <li>
          <%if driver.driver_on_trip %>
          <%= "On Trip" %>
          <%end%>
        </li>
        <li>
          <%= driver.average_rating %>
        </li>
        <% end %>
        <%end%>
        <ul>
        </section>
      </tbody>
    </table>
