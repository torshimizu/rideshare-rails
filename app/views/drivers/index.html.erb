<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Drivers
      </h1>
      <h3>Find by Name</h3>
      <%= render partial: "shared/find_by_name", locals: {action_name: "Find Driver", url: by_name_path} %>
    </div>
  </div>
</section>

<article>
  <ul class='show-page header'>
    <li>Name</li>
    <li>Rating</li>
  </ul>

  <section class='show-page'>
    <ul>
      <% if @drivers.length == 0 %>
      <%="Driver not found"%>
      <% else %>
      <% @drivers.each do |driver| %>
        <li>
          <%= link_to "#{driver.name}", driver_path(driver.id) %>
        </li>
      <% end %>
    </ul>
    <ul>
      <% @drivers.each do |driver| %>
        <li>
          <%= driver.average_rating %>
        </li>
      <% end %>
      <%end%>
    <ul>
  </section>
</article>
