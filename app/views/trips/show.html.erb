<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Trip <%= @trip.id %>
      </h1>
    </div>
  </div>
</section>

<p>Date : <%= @trip.date%></p>
<p>Cost: $<%= @trip.cost%></p>
<p>
  <% if @trip.rating.nil? %>
    <%= form_for @trip do |f| %>
      <%= f.label :rating %>
      <%= f.number_field :rating %>
      <%= f.submit 'Rate' %>
    <% end %>
  <% else %>
    Rating: <%= @trip.rating %>
  <% end %>
</p>
<p>Driver: <%= @driver.name %></p>
<p>Passenger: <%= @passenger.name %></p>
